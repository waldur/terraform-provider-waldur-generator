	{{- end }}
	{{- end }}
}

func (d *{{ .Name | title }}DataSource) Metadata(ctx context.Context, req datasource.MetadataRequest, resp *datasource.MetadataResponse) {
	resp.TypeName = req.ProviderTypeName + "_{{ .Name }}"
}

func (d *{{ .Name | title }}DataSource) Schema(ctx context.Context, req datasource.SchemaRequest, resp *datasource.SchemaResponse) {
	resp.Schema = schema.Schema{
		MarkdownDescription: "{{ .Name | title }} data source - lookup by name or UUID",

		Attributes: map[string]schema.Attribute{
			"id": schema.StringAttribute{
				Optional:            true,
				Computed:            true,
				MarkdownDescription: "Resource UUID. If provided, lookup by UUID. Otherwise, use name for filtering.",
			},
			"name": schema.StringAttribute{
				Optional:            true,
				Computed:            true,
				MarkdownDescription: "Resource name",
			},
			{{- range .ResponseFields }}
			{{- if ne .Name "name" }}
			"{{ .TFSDKName }}": schema.{{ if eq .Type "string" }}String{{ else if eq .Type "integer" }}Int64{{ else if eq .Type "boolean" }}Bool{{ else if eq .Type "number" }}Float64{{ end }}Attribute{
				Computed:            true,
				MarkdownDescription: "{{ .Description }}",
			},
			{{- end }}
			{{- end }}
		},
	}
}

func (d *{{ .Name | title }}DataSource) Configure(ctx context.Context, req datasource.ConfigureRequest, resp *datasource.ConfigureResponse) {
	// Prevent panic if the provider has not been configured.
	if req.ProviderData == nil {
		return
	}

	client, ok := req.ProviderData.(*client.Client)
	if !ok {
		resp.Diagnostics.AddError(
			"Unexpected Data Source Configure Type",
			"Expected *client.Client, got something else. Please report this issue to the provider developers.",
		)
		return
	}

	d.client = client
}

func (d *{{ .Name | title }}DataSource) Read(ctx context.Context, req datasource.ReadRequest, resp *datasource.ReadResponse) {
	var data {{ .Name | title }}DataSourceModel

	// Read Terraform configuration data into the model
	resp.Diagnostics.Append(req.Config.Get(ctx, &data)...)

	if resp.Diagnostics.HasError() {
		return
	}

	{{- if .ListPath }}
	listPath := "{{ .ListPath }}"
	{{- else }}
	resp.Diagnostics.AddError(
		"Configuration Error",
		"API path not found in OpenAPI schema for {{ .Name }}. Please check the base_operation_id configuration.",
	)
	return
	{{- end }}
	
	{{- if .RetrievePath }}
	retrievePath := "{{ .RetrievePath }}"
	{{- else }}
	// No separate retrieve path, use list path
	retrievePath := listPath
	{{- end }}

	// Check if UUID is provided for direct lookup
	if !data.UUID.IsNull() && data.UUID.ValueString() != "" {
		// Direct UUID lookup
		// operationID: {{ .Operations.List }} (retrieve by UUID)
		var item map[string]interface{}
		
		err := d.client.GetByUUID(ctx, retrievePath, data.UUID.ValueString(), &item)
		if err != nil {
			resp.Diagnostics.AddError(
				"Unable to Read {{ .Name | displayName }}",
				"An error occurred while reading the {{ .Name }} by UUID: "+err.Error(),
			)
			return
		}

		// Map response fields		// Extract data from single result
		if uuid, ok := item["uuid"].(string); ok {
			data.UUID = types.StringValue(uuid)
		}
		if name, ok := item["name"].(string); ok {
			data.Name = types.StringValue(name)
		}

		// Map response fields
		{{- range .ResponseFields }}
		{{- if ne .Name "name" }}
		if val, ok := item["{{ .Name }}"]; ok && val != nil {
			{{- if eq .Type "string" }}
			if str, ok := val.(string); ok {
				data.{{ .Name | title }} = types.StringValue(str)
			}
			{{- else if eq .Type "integer" }}
			if num, ok := val.(float64); ok {
				data.{{ .Name | title }} = types.Int64Value(int64(num))
			}
			{{- else if eq .Type "boolean" }}
			if b, ok := val.(bool); ok {
				data.{{ .Name | title }} = types.BoolValue(b)
			}
			{{- else if eq .Type "number" }}
			if num, ok := val.(float64); ok {
				data.{{ .Name | title }} = types.Float64Value(num)
			}
			{{- end }}
		}
		{{- end }}
		{{- end }}

	} else if !data.Name.IsNull() && data.Name.ValueString() != "" {
		// Filter by name
		// operationID: {{ .Operations.List }}
		var results []map[string]interface{}
		
		filters := map[string]string{
			{{- if .QueryParams.name_exact }}
			"name_exact": data.Name.ValueString(),
			{{- else if .QueryParams.name }}
			"name": data.Name.ValueString(),
			{{- else }}
			// No name filter parameter found in OpenAPI schema, using 'name' as fallback
			"name": data.Name.ValueString(),
			{{- end }}
		}
		
		err := d.client.ListWithFilter(ctx, listPath, filters, &results)
		if err != nil {
			resp.Diagnostics.AddError(
				"Unable to List {{ .Name | displayName }}",
				"An error occurred while filtering {{ .Name }} by name: "+err.Error(),
			)
			return
		}

		// Check results
		if len(results) == 0 {
			resp.Diagnostics.AddError(
				"{{ .Name | displayName }} Not Found",
				"No {{ .Name }} found with name: "+data.Name.ValueString(),
			)
			return
		}
		
		if len(results) > 1 {
			resp.Diagnostics.AddError(
				"Multiple {{ .Name | displayName }}s Found",
				fmt.Sprintf("Found %d {{ .Name }}s with name '%s'. Please use a more specific filter or lookup by UUID.", len(results), data.Name.ValueString()),
			)
			return
		}

		// Extract data from the single result
		// Extract data from result
	if uuid, ok := results[0]["uuid"].(string); ok {
		data.UUID = types.StringValue(uuid)
	}
	if name, ok := results[0]["name"].(string); ok {
		data.Name = types.StringValue(name)
	}

	// Map response fields
	{{- range .ResponseFields }}
	{{- if ne .Name "name" }}
	if val, ok := results[0]["{{ .Name }}"]; ok && val != nil {
		{{- if eq .Type "string" }}
		if str, ok := val.(string); ok {
			data.{{ .Name | title }} = types.StringValue(str)
		}
		{{- else if eq .Type "integer" }}
		if num, ok := val.(float64); ok {
			data.{{ .Name | title }} = types.Int64Value(int64(num))
		}
		{{- else if eq .Type "boolean" }}
		if b, ok := val.(bool); ok {
			data.{{ .Name | title }} = types.BoolValue(b)
		}
		{{- else if eq .Type "number" }}
		if num, ok := val.(float64); ok {
			data.{{ .Name | title }} = types.Float64Value(num)
		}
		{{- end }}
	}
	{{- end }}
	{{- end }}

	} else {
		resp.Diagnostics.AddError(
			"Missing Required Attribute",
			"Either 'id' (UUID) or 'name' must be provided to lookup {{ .Name }}.",
		)
		return
	}

	// Save data into Terraform state
	resp.Diagnostics.Append(resp.State.Set(ctx, &data)...)
}
