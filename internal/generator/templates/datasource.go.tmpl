package datasources

import (
	"context"

	"github.com/hashicorp/terraform-plugin-framework/datasource"
	"github.com/hashicorp/terraform-plugin-framework/datasource/schema"
	"github.com/hashicorp/terraform-plugin-framework/types"

	"github.com/waldur/terraform-waldur-provider/internal/client"
)

// Ensure provider defined types fully satisfy framework interfaces.
var _ datasource.DataSource = &{{ .Name | title }}DataSource{}

func New{{ .Name | title }}DataSource() datasource.DataSource {
	return &{{ .Name | title }}DataSource{}
}

// {{ .Name | title }}DataSource defines the data source implementation.
type {{ .Name | title }}DataSource struct {
	client *client.Client
}

// {{ .Name | title }}DataSourceModel describes the data source data model.
type {{ .Name | title }}DataSourceModel struct {
	UUID types.String `tfsdk:"id"`
	// TODO: Add fields based on OpenAPI schema
}

func (d *{{ .Name | title }}DataSource) Metadata(ctx context.Context, req datasource.MetadataRequest, resp *datasource.MetadataResponse) {
	resp.TypeName = req.ProviderTypeName + "_{{ .Name }}"
}

func (d *{{ .Name | title }}DataSource) Schema(ctx context.Context, req datasource.SchemaRequest, resp *datasource.SchemaResponse) {
	resp.Schema = schema.Schema{
		MarkdownDescription: "{{ .Name | title }} data source",

		Attributes: map[string]schema.Attribute{
			"id": schema.StringAttribute{
				Required:            true,
				MarkdownDescription: "Resource UUID to lookup",
			},
			// TODO: Add attributes from OpenAPI schema
		},
	}
}

func (d *{{ .Name | title }}DataSource) Configure(ctx context.Context, req datasource.ConfigureRequest, resp *datasource.ConfigureResponse) {
	// Prevent panic if the provider has not been configured.
	if req.ProviderData == nil {
		return
	}

	client, ok := req.ProviderData.(*client.Client)
	if !ok {
		resp.Diagnostics.AddError(
			"Unexpected Data Source Configure Type",
			"Expected *client.Client, got something else. Please report this issue to the provider developers.",
		)
		return
	}

	d.client = client
}

func (d *{{ .Name | title }}DataSource) Read(ctx context.Context, req datasource.ReadRequest, resp *datasource.ReadResponse) {
	var data {{ .Name | title }}DataSourceModel

	// Read Terraform configuration data into the model
	resp.Diagnostics.Append(req.Config.Get(ctx, &data)...)

	if resp.Diagnostics.HasError() {
		return
	}

	// Call Waldur API to get resource by UUID
	// operationID: {{ .Operations.List }} (we use retrieve for single resource lookup)
	var result map[string]interface{}
	
	{{- if .APIPath }}
	apiPath := "{{ .APIPath }}"
	{{- else }}
	resp.Diagnostics.AddError(
		"Configuration Error",
		"API path not found in OpenAPI schema for {{ .Name }}. Please check the base_operation_id configuration.",
	)
	return
	{{- end }}
	
	err := d.client.GetByUUID(ctx, apiPath, data.UUID.ValueString(), &result)
	if err != nil {
		resp.Diagnostics.AddError(
			"Unable to Read {{ .Name | title }}",
			"An error occurred while reading the {{ .Name }}: "+err.Error(),
		)
		return
	}

	// TODO: Map response fields to data model based on OpenAPI schema
	// For now, we just ensure UUID is set from the response
	if uuid, ok := result["uuid"].(string); ok {
		data.UUID = types.StringValue(uuid)
	}

	// Save data into Terraform state
	resp.Diagnostics.Append(resp.State.Set(ctx, &data)...)
}
