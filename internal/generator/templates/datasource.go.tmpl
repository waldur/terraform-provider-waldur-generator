		// Filter by provided parameters
		var results []map[string]interface{}
		
		filters := map[string]string{}
		
		{{- range .FilterParams }}
		if !data.{{ .TFSDKName | title }}.IsNull() {
			{{- if eq .Type "String" }}
			filters["{{ .Name }}"] = data.{{ .TFSDKName | title }}.ValueString()
			{{- else if eq .Type "Int64" }}
			filters["{{ .Name }}"] = fmt.Sprintf("%d", data.{{ .TFSDKName | title }}.ValueInt64())
			{{- else if eq .Type "Bool" }}
			filters["{{ .Name }}"] = fmt.Sprintf("%t", data.{{ .TFSDKName | title }}.ValueBool())
			{{- else if eq .Type "Float64" }}
			filters["{{ .Name }}"] = fmt.Sprintf("%f", data.{{ .TFSDKName | title }}.ValueFloat64())
			{{- end }}
		}
		{{- end }}
		
		if len(filters) == 0 {
			resp.Diagnostics.AddError(
				"Missing Filter Parameters",
				"At least one filter parameter (or 'id') must be provided to lookup {{ .Name }}.",
			)
			return
		}
		
		err := d.client.ListWithFilter(ctx, "{{ .ListPath }}", filters, &results)
		if err != nil {
			resp.Diagnostics.AddError(
				"Unable to List {{ .Name | displayName }}",
				"An error occurred while filtering {{ .Name }}: "+err.Error(),
			)
			return
		}

		// Check results
		if len(results) == 0 {
			resp.Diagnostics.AddError(
				"{{ .Name | displayName }} Not Found",
				"No {{ .Name }} found with provided filters.",
			)
			return
		}
		
		if len(results) > 1 {
			resp.Diagnostics.AddError(
				"Multiple {{ .Name | displayName }}s Found",
				fmt.Sprintf("Found %d {{ .Name }}s with provided filters. Please use more specific filters or lookup by UUID.", len(results)),
			)
			return
		}

		// Extract data from the single result
		if uuid, ok := results[0]["uuid"].(string); ok {
			data.UUID = types.StringValue(uuid)
